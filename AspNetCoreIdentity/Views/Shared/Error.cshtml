@model ErrorViewModel
@{
    if (Model == null)
    {
        ViewData["Title"] = "Ocorreu um erro" ;  
    }
    Else{
        ViewData["Title"] = Model.Titulo;
    }
}

@{
    if (Model == null)
    {
            <div>
                <h2>Oops! Ocorreu um erro, não se preocupe, nosso time ja foi avisado e estamos trabalhando para solucioná-lo</h2>
            </div>
    else
    {
            <h1>@html.Raw(Model.Titulo)</h1>
            <h2 class = "text-danger" >@Html.Raw(Model.Mensagem)</h2>
    }
}
